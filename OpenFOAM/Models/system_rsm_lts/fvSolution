FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|U|h|k).*"
    {
        solver          PBiCGStab;
        preconditioner	DILU;
        tolerance       1e-12;
        relTol          0.0;
    }

    //RSM adder
	"(R|epsilon).*"
	{
	solver		smoothSolver;
	smoother	GaussSeidel;
	tolerance	1e-9;
	relTol		0.01;
	}

	RFinal
	{
	solver		smoothSolver;
	smoother	GaussSeidel;
	tolerance	1e-12;
	relTol		0;		
	}

	p
	{
        solver          PBiCGStab;
        preconditioner	DILU;
		//solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        //smoother        DILUGaussSeidel;
        //nCellsInCoarsestLevel 20;
	}
	
	pFinal
	{
        solver          PBiCGStab;
        preconditioner	DILU;
		//solver          GAMG;
        tolerance       1e-12;
        relTol          0;
        //smoother        DILUGaussSeidel;
        //nCellsInCoarsestLevel 20;
    }
}

